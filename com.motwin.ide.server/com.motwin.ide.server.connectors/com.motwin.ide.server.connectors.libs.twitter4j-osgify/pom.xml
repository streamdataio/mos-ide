<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>com.motwin.ide.server.connectors</groupId>
    <artifactId>com.motwin.ide.server.connectors.parent</artifactId>
    <version>3.3.1.RELEASE</version>
  </parent>
  
  <artifactId>com.motwin.ide.server.connectors.libs.twitter4j-osgify</artifactId>
  <packaging>bundle</packaging>
  
  <properties>
    <twitter4j.version>3.0.5</twitter4j.version>      
  </properties>
  
  <build>
    <finalName>twitter4j-${twitter4j.version}</finalName>
      
    <plugins>
      <plugin>
        <artifactId>maven-dependency-plugin</artifactId>
        <executions>
          <execution>
            <id>unpack</id>
            <phase>generate-resources</phase>
            <goals>
              <goal>unpack</goal>
            </goals>
            <configuration>
              <artifactItems>
                <artifactItem>
                 <groupId>org.twitter4j</groupId>
                 <artifactId>twitter4j-core</artifactId>
                  <version>${twitter4j.version}</version>
                  <type>jar</type>
                  <overWrite>true</overWrite>
                  <outputDirectory>${project.build.directory}/classes</outputDirectory>
                </artifactItem>
                <artifactItem>
                  <groupId>org.twitter4j</groupId>
                  <artifactId>twitter4j-async</artifactId>
                  <version>${twitter4j.version}</version>
                  <type>jar</type>
                  <outputDirectory>${project.build.directory}/classes</outputDirectory>
                </artifactItem>
                <artifactItem>
                  <groupId>org.twitter4j</groupId>
                  <artifactId>twitter4j-media-support</artifactId>
                  <version>${twitter4j.version}</version>
                  <type>jar</type>
                  <outputDirectory>${project.build.directory}/classes</outputDirectory>
                </artifactItem>
                <artifactItem>
                  <groupId>org.twitter4j</groupId>
                  <artifactId>twitter4j-stream</artifactId>
                  <version>${twitter4j.version}</version>
                  <type>jar</type>
                  <outputDirectory>${project.build.directory}/classes</outputDirectory>
                </artifactItem>
              </artifactItems>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.apache.felix</groupId>
        <artifactId>maven-bundle-plugin</artifactId>
        <version>2.3.7</version>
        <extensions>true</extensions>
        <configuration>
          <instructions>
            <Bundle-Name>org.twitter4j</Bundle-Name>
            <Bundle-SymbolicName>org.twitter4j</Bundle-SymbolicName>
            <Bundle-Version>${twitter4j.version}</Bundle-Version>
            <Export-Package>*</Export-Package>
          </instructions>
        </configuration>
      </plugin>
    </plugins>
  </build>
  
</project>